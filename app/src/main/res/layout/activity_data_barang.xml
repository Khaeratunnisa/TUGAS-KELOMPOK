<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hera.tugaskelompok.DataBarang">

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Barang |"
        android:id="@+id/button_brg1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#d2cfcf"
        android:layout_toStartOf="@+id/button_spl1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Supplier | "
        android:id="@+id/button_spl1"
        style="?android:attr/borderlessButtonStyle"
        android:background="#9ae3f6"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button_kry1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Karyawan"
        android:id="@+id/button_kry1"
        style="?android:attr/borderlessButtonStyle"
        android:background="#9ae3f6"
        android:layout_above="@+id/button_tbbrg"
        android:layout_alignEnd="@+id/button_tbbrg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Barang"
        android:id="@+id/button_tbbrg"
        android:layout_below="@+id/button_spl1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/button_tbbrg"
        android:layout_centerHorizontal="true" />



</RelativeLayout>