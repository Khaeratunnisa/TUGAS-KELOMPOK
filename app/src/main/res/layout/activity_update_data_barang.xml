<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hera.tugaskelompok.UpdateDataBarang">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_idbrg"
        android:hint="Id Barang"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nmbrg"
        android:layout_below="@+id/editText_idbrg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_idbrg"
        android:hint="Nama Barang"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_jnsbrg"
        android:layout_below="@+id/editText_nmbrg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_nmbrg"
        android:hint="Jenis Barang" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_jmlbrg"
        android:layout_below="@+id/editText_jnsbrg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_jnsbrg"
        android:hint="Jumlah Barang" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_hrgbrg"
        android:layout_below="@+id/editText_jmlbrg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_jmlbrg"
        android:hint="Harga Barang" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_idspl"
        android:layout_below="@+id/editText_hrgbrg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_hrgbrg"
        android:hint="Id Supplier" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Data Barang"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_update11"
        android:layout_below="@+id/editText_idspl"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/button_kembali11"
        android:layout_alignTop="@+id/button_update11"
        android:layout_alignEnd="@+id/textView5" />
</RelativeLayout>
